<% title "Accounts" %>

<table>
  <tr>
    <th>Name</th>
    <th>Balance</th>
  </tr>
  <% for account in @accounts %>
    <tr>
      <td><%= account.name %></td>
      <td><%= account.balance %></td>
      <td><%= link_to "Edit", edit_account_path(account) %></td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to "New Account", new_account_path %> |
  <%= link_to "New Transfer", new_transfer_path %>
</p>
