.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to "Fractal Explorer", root_path, :class => "brand"
      %ul.nav
        %li= link_to "Home", root_path
        %li= link_to "About", about_path
      %ul.nav.pull-right
        - unless current_user
          %li= link_to "Sign In with Twitter", signin_path_with(:twitter)
        - else
          %li
            Hello, #{current_user.name}!
            %img.avatar{:src => current_user.avatar}
          %li.divider-vertical
          %li
            = link_to "Sign Out", signout_path


