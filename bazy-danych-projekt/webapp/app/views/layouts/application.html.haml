!!! html
%html
  %head
    %title Webapp
    = stylesheet_link_tag "http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    :css
      #container { width: 800px; padding: 20px; }
%body
  #container
    - if signed_in?
      Hello #{current_user.email}
      = link_to "Logout", destroy_db_user_session_path

    .notice= notice
    .alert= alert
    = yield
